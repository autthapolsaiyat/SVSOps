SecRuleEngine On
SecRequestBodyAccess On
SecResponseBodyAccess On

# ปล่อยให้ setup.conf ตั้งค่า unicode.mapping เอง
Include /etc/nginx/modsecurity.d/setup.conf

# โหลด OWASP CRS
Include /etc/nginx/modsecurity.d/owasp-crs/crs-setup.conf
Include /etc/nginx/modsecurity.d/owasp-crs/plugins/*-before.conf
Include /etc/nginx/modsecurity.d/owasp-crs/rules/*.conf
Include /etc/nginx/modsecurity.d/owasp-crs/plugins/*-after.conf

