:80 {
	encode zstd gzip

	log {
		output stdout
		format console
	}

	# ส่ง /api/* ตรงไป backend (ไม่ตัด prefix)
	handle /api/* {
		reverse_proxy svs-api:8000
	}

	# Static/SPA
	handle /assets/* {
		root * /srv
		header Cache-Control "public, max-age=31536000, immutable"
		file_server
	}

	handle {
		root * /srv
		try_files {path} /index.html
		file_server
	}
}

